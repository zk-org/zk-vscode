{
  "name": "zk-vscode",
  "displayName": "zk-vscode",
  "description": "Visual Studio Code extension for zk",
  "publisher": "mickael-menu",
  "version": "0.1.0",
  "repository": { "type": "git", "url": "https://github.com/mickael-menu/zk-vscode.git" },
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.zk"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zk.restart",
        "title": "zk: Restart"
      },
      {
        "command": "zk.showLogs",
        "title": "zk: Show Logs"
      }
    ],
    "configuration": {
      "title": "zk",
      "properties": {
        "zk.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Level of verbosity in zk's log output.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^10.1.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
